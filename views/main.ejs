<!DOCTYPE html>
<html>
	<head>
		<title>Main Page</title>
		<% include header.ejs %>
	</head>
  <body>

		<div class="container">

			<% include navbar.ejs %>

			<div class="row">

				<a id="scrollLeft" class="col-md-1 left carousel-control" role="button">
					<span class="glyphicon glyphicon-chevron-left"></span>
				</a>

				<div id="full_imgs" class="col-md-10">
					<% for (var i = 0; i < 24; i++ ) { %>
					<div id="Image_<%= i+1 %>" class="col-md-4 full_img">
						<img id="image_<%= i+1 %>" src="http://placehold.it/350x350"/>
					</div>
					<% } %>
				</div>

				<a id="scrollRight" class="col-md-1 right carousel-control" role="button" >
					<span class="glyphicon glyphicon-chevron-right" ></span>
				</a>

			</div>

			<div id="thumbnail_imgs" class="row col-md-10">
				<% for ( var i = 0; i < 24; i++ ) { %>
					<div id="Image_<%=i%>_thumb" class="col-md-1 thumbnail_img">
						<img src="http://placehold.it/50x50"/>
					</div>
				<% } %>
			</div>

		</div>

		<script src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'></script>
		<script src='/jquery.scrollto/jquery.scrollTo.min.js'></script>

		<script>
			$(document).ready(function(){ 
				var width = $("#full_imgs").width();
				console.log("Width: " + width);
				$("#scrollLeft").click(function () {
					$('#full_imgs').scrollTo( '-=1252px', 500 );
					});

				$("#scrollRight").click(function () {
					$('#full_imgs').scrollTo( '+=1252px', 500 );
				});
				$(document).keydown(function(event) {
					if ((event.keyCode || event.which) == 37) {
						$('#full_imgs').scrollTo( '-=1252px', 500 );
					}
					if ((event.keyCode || event.which) == 39) {
						$('#full_imgs').scrollTo( '+=1252px', 500 );
					}
				});
			});
		</script>

  </body>

</html>
